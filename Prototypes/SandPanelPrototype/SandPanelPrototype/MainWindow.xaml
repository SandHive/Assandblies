
    <Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:sc="clr-namespace:Sand.Controls;assembly=Sand.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Prototype.MainWindow"
    Loaded="Window_Loaded"
    Title="Prototype" 
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen">
    
    <DockPanel Margin="10">

        <Border BorderBrush="Black" BorderThickness="1" DockPanel.Dock="Top">

            <sc:SandPanelWidgetGrid ColumnCount="5" RowCount="5" ShowGrid="True" x:Name="_sandPanelWidgetGrid">
                                
                <sc:SandPanel.Resources>

                    <!-- <Style TargetType="{x:Type sc:SandPanelWidget}"> -->
                    <Style TargetType="{x:Type sc:SandPanelWidget}">
                        
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <Border Background="Pink" BorderBrush="Green" BorderThickness="3" CornerRadius="5">
                                        <ContentPresenter Content="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Height" Value="50" />
                        <Setter Property="Width" Value="50" />

                    </Style>

                    <!-- <Style TargetType="{x:Type sc:SandPanelWidgetGridCell}"> -->
                    <Style TargetType="{x:Type sc:SandPanelWidgetGridCell}">
                        <Style.Triggers>
                            <Trigger Property="sc:SandPanelWidgetGridCell.IsWidgetOver" Value="True">
                                <Setter Property="Border.Background" Value="Yellow" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                    
                </sc:SandPanel.Resources>
                
                <sc:SandPanelWidget Canvas.Left="10">
                    <Image Source="Images/convert_icon256.png" />
                </sc:SandPanelWidget>

                <sc:SandPanelWidget Canvas.Left="100">
                    <Image Source="Images/convert_icon256.png" />
                </sc:SandPanelWidget>

                <sc:SandPanelWidget Canvas.Left="200">
                    <Image Source="Images/convert_icon256.png" />
                </sc:SandPanelWidget>

            </sc:SandPanelWidgetGrid>
            
        </Border>

        <sc:SandPanel Height="200">
            <sc:SandPanelItem Canvas.Left="100" Canvas.Top="20">
                <Image Height="60" Source="Images/convert_icon256.png" Width="60" />
            </sc:SandPanelItem>
        </sc:SandPanel>

    </DockPanel>
    
</Window>